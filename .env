# ===============================================
# .env.example — Ambiente Django
# Copie este arquivo para .env e ajuste conforme necessário.
# ===============================================

# Ambiente alvo: "prod" para produção (Azure), "dev" para desenvolvimento local
TARGET_ENV=dev

# -----------------------------------------------
# Segurança
# -----------------------------------------------

# Chave secreta usada pelo Django (obrigatório)
# Gere uma nova em: https://djecrety.ir/
SECRET_KEY=sua-chave-secreta-aqui

# Ativa/Desativa modo debug
# True para desenvolvimento, False em produção
DEBUG=True

# Forçar redirecionamento HTTPS (apenas se usar SSL no Azure)
SECURE_SSL_REDIRECT=False

# -----------------------------------------------
# Banco de dados (usado apenas se TARGET_ENV=prod)
# -----------------------------------------------

DBNAME=nome-do-banco
DBUSER=usuario-do-banco
DBPASS=senha-do-banco
DBHOST=host-do-banco

# -----------------------------------------------
# Segurança CSRF (produção)
# ----------------------------------------------

# Domínios confiáveis (ex: domínio do Azure ou custom)
# Exemplo: https://seudominio.azurewebsites.net
CSRF_TRUSTED_ORIGINS=
